<idea-plugin>
	<id>com.dwilden.crondescriptor</id>
	<name>Cron Descriptor</name>
	<vendor email="dirk.wilden@device-insight.com" url="http://www.device-insight.com">Dirk Wilden</vendor>

	<description><![CDATA[
    Plugin to display a human-readable description for cron expressions as tooltip<br><br>
    Supports: <em>Java, Kotlin, Properties, Yaml</em>
    ]]></description>

	<depends optional="true" config-file="java-features.xml">com.intellij.modules.java</depends>
	<depends optional="true" config-file="kotlin-features.xml">org.jetbrains.kotlin</depends>
	<depends optional="true" config-file="properties-features.xml">com.intellij.properties</depends>
	<depends optional="true" config-file="yaml-features.xml">org.jetbrains.plugins.yaml</depends>
</idea-plugin>